AuthType Basic
AuthName "Authentication Required"
AuthUserFile "/var/www/time.kynda.net/.htpasswd"
Require valid-user

<IfModule mod_rewrite.c>
    Options -MultiViews +Indexes +FollowSymLinks

    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^.*$ /index.php [L]
</IfModule>
