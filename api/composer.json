{
    "name": "kynda/time-api",
    "description": "API backend to the TimeKeeper App",
    "homepage": "http://github.com/kynda/timekeeper",
    "license": "GPLv3",
    "authors": [
        {
            "name": "Joseph Hallenbeck",
            "email": "joe@joehallenbeck.com",
            "homepage": "https://joehallenbeck.com"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-json": "*",
        "league/fractal": "^0.19.2",
        "monolog/monolog": "^2.2",
        "php-di/php-di": "^6.3",
        "slim/psr7": "^1.3",
        "slim/slim": "^4.7"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^0.8.1",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.1.0",
        "phpstan/phpstan": "^0.12.80",
        "phpunit/phpunit": "^8.0 || ^9.0"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "coverage": "export XDEBUG_MODE=coverage; phpunit --coverage-html ./logs/coverage",
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
